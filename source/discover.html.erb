---
title: Find People
layout: user
---

<section>
	<div class="container">
		<div class="row center">
			<div class="col-md-8 col-md-offset-2">
				<h1>Find someone you'd like to thank, or <a href="#" data-toggle="modal" data-target="#invite-form">invite your friends</a> to join the community.</h1>
				<br />
				<ul class="nav nav-pills center-block">
				  <li class="active"><a href="">Popular</a></li>
				  <li><a href="">Trending</a></li>
				  <li><a href="">New to Thankyouspot</a></li>
				  <li><a href="">Following</a></li>
				  <li><a href="">Followers</a></li>
				</ul>
			</div>
		</div>
		<div class="modal fade" id="invite-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog modal-sm">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Invite via Email</h4>
		      </div>
		      <div class="modal-body">
		      	<form>
					<div class="form-group">
						<label class="control-label">Email</label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
						    <input type="text" class="form-control" placeholder="email@example.com" />
						</div>
					</div>
					<div class="form-group">
						<label class="control-label">Add personal message?</label>
						<textarea class="form-control" rows="3"></textarea>
					</div>
				</form>
		      </div>
		      <div class="modal-footer">
				<button type="button" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Send Invite</button>
		        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		      </div>
		    </div>
		  </div>
		</div>
		
		<div class="row">
			<% for i in 1..11 %>
			<div class="col-md-3 col-sm-4 col-xs-12">
				<%= partial "partials/profile-widget-1" %>
			</div>
			<% end %>
		</div>
		
		<a href="" class="show-more btn btn-default btn-block">Show more</a>
	</div>
</section>